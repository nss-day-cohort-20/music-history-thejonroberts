<div id="addMusic" class="col">
	<form action="javascript:void(0)" method="post" id="addSongForm">
		<div class="form-group row">
		  <label for="titleEntry" class="col-2 col-form-label">Song</label>
		  <div class="col-10">
		    <input class="form-control" type="text" value="Modern Kicks"  name="titleEntry" id="titleEntry">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="artistEntry" class="col-2 col-form-label">Artist</label>
		  <div class="col-10">
		    <input class="form-control" type="text" value="the Exploding Hearts"  name="artistEntry" id="artistEntry">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="albumEntry" class="col-2 col-form-label">Album</label>
		  <div class="col-10">
		    <input class="form-control" type="text" value="Guitar Romantic"  name="albumEntry" id="albumEntry">
		  </div>
		</div>
		<div class="form-group row">
		  <label for="example-number-input" class="col-2 col-form-label">Minutes</label>
		  <div class="col-2">
		    <input class="form-control" type="number" value="3" id="lengthMinutes" min="0" max="10">
		  </div>
		  <label for="example-number-input" class="col-2 col-form-label">Seconds</label>
		  <div class="col-2">
		    <input class="form-control" type="number" value="30" id="lengthSeconds" min="0" max="59">
		  </div>
		</div>
		<fieldset class="form-group">
	    <label>Genre</label>
	    <div class="form-check form-check-inline">
	      <label class="form-check-label">
	        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="rock" checked>
	        Rock
	      </label>
	    </div>
	    <div class="form-check form-check-inline">
	    <label class="form-check-label">
	        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="pop">
	        Pop
	      </label>
	    </div>
	    <div class="form-check form-check-inline">
	    <label class="form-check-label">
	        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="jazz">
	        Jazz
	      </label>
	    </div>
	    <div class="form-check form-check-inline">
	      <label class="form-check-label">
	        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="classical">
	        Classical
	      </label>
	    </div>
	    <div class="form-check form-check-inline">
	    <label class="form-check-label">
	        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="blues">
	        Blues
	      </label>
	    </div>
	    <div class="form-check form-check-inline">
	    <label class="form-check-label">
	        <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="hip-hop">
	        Hip-Hop
	      </label>
	    </div>
  </fieldset>
		<input class="btn btn-primary" type="submit" name="submitSongAdd" value="Add" id="submitSongAdd">
	</form>
</div>
